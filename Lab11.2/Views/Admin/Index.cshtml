@model List<Product> 
@{
    ViewData["Title"] = "Index";
}




<style>
    td {
        padding: 5px;
    }


    .wrapper {
        display: grid;
        grid-template-columns: .5fr 2fr 1fr 1fr 1fr 10fr;
    }

    .prodname {
        font-weight: bold;
    }

    .wrapper > div {
        padding: 3px;
    }
</style>

<h1>Admin Operations</h1>
<h2><a href="/admin/add">Add Item</a></h2>



@foreach (string cat in ViewBag.categories)
{
    <h1>@cat</h1>


    <div class="wrapper">


        @foreach (Product prod in Model)
        {

            @if (prod.category == cat)
            {
                <div></div>
                <div class="prodname"><a href="/product/Detail/@prod.productId">@prod.productName</a></div>
                <div>$@prod.price</div>
                <div>
                    <a href="/admin/edit/@prod.productId">Edit</a>
                </div>
                <div>
                    <a href="/admin/remove/@prod.productId">Remove</a>
                </div>
                <div></div>
            }

        }

    </div>
}